(*      SNAKE(1).row = 40: SNAKE(2).row = 15
        SNAKE(1).col = 75: SNAKE(2).col = 5
        SNAKE(1).direction = 1: SNAKE(2).direction = 2 *)

      otherwise:
(*      for number range 4 to 49 STEP 2 do
          FIELD[number][10] := '#';
