        end for; *)
        number := 1;
        while number <= 20 do
          FIELD[number][10] := '#';
          FIELD[21 - number][20] := '#';
          FIELD[number][30] := '#';
          FIELD[21 - number][40] := '#';
          FIELD[number][50] := '#';
          FIELD[21 - number][60] := '#';
          FIELD[number][70] := '#';
          setPos(win, number, 10);
