          write(win, "#");
          setPos(win, number, 30);
          write(win, "#");
          setPos(win, 22 - number, 40);
          write(win, "#");
          setPos(win, number, 50);
          write(win, "#");
          setPos(win, 22 - number, 60);
          write(win, "#");
