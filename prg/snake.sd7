        end while;
(*      SNAKE(1).row = 7: SNAKE(2).row = 43
        SNAKE(1).col = 65: SNAKE(2).col = 15
        SNAKE(1).direction = 2: SNAKE(2).direction = 1 *)

      when {8}:
        for number range 1 to 18 do
          FIELD[number][10] := '#';
          FIELD[22 - number][20] := '#';
          FIELD[number][30] := '#';
          FIELD[22 - number][40] := '#';
          FIELD[number][50] := '#';
          FIELD[22 - number][60] := '#';
          FIELD[number][70] := '#';
          setPos(win, number, 10);
          write(win, "#");
