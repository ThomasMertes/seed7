          FIELD[number][59] := '#';
          setPos(win, number, 19);
          write(win, "#");
          setPos(win, number, 59);
          write(win, "#");
        end for;
        for number range 21 to 57 do
          FIELD[4][number] := '#';
          FIELD[18][number] := '#';
          setPos(win, 4, number);
          write(win, "#");
          setPos(win, 18, number);
          write(win, "#");
