          setPos(win, 22 - number, 59);
          write(win, "#");
        end for;
        for number range 1 to 45 do
          FIELD[16][number] := '#';
          FIELD[6][79 - number] := '#';
          setPos(win, 16, number);
          write(win, "#");
          setPos(win, 6, 79 - number);
          write(win, "#");
        end for;
(*      SNAKE(1).row = 7: SNAKE(2).row = 43
        SNAKE(1).col = 60: SNAKE(2).col = 20
        SNAKE(1).direction = 3: SNAKE(2).direction = 4 *)

