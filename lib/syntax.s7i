$ system "assign"       is := ;
$ system "create"       is ::= ;
$ system "destroy"      is destroy;
$ system "ord"          is ord;
$ system "in"           is in;
$ system "prot_outfile" is PROT_OUTFILE;
$ system "flush"        is flush;
$ system "write"        is write;
$ system "writeln"      is writeln;
