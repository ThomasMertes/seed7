 *  @return the pixel color at position (''x'', ''y'').
 *)
const func color: getPixelColor (inout PRIMITIVE_WINDOW: aWindow,
    in integer: x, in integer: y) is func
  result
    var color: col is color.value;
  local
    var pixel: pix is pixel.value;
  begin
