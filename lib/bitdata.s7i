const func integer: getBitsLsb (inout file: inFile, inout integer: bitPos,
    in var integer: bitWidth) is func
  result
    var integer: resultBits is 0;
  local
    var integer: bitsInByte is 0;
    var integer: bitsInResult is 0;
  begin
    if bitPos = 8 then
      bitPos := 0;
