const ACTION: CON_CLEAR   is action "CON_CLEAR";
const ACTION: CON_CURSOR  is action "CON_CURSOR";
const ACTION: CON_FLUSH   is action "CON_FLUSH";
const ACTION: CON_HEIGHT  is action "CON_HEIGHT";
