    declareExtern(c_prog, "striType    filGetsChkCtrlC (fileType, intType);");
    declareExtern(c_prog, "boolType    filHasNext (fileType);");
    declareExtern(c_prog, "boolType    filHasNextChkCtrlC (fileType);");
